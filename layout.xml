<!-- res/layout/activity_main.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/pulseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter pulse"
        android:inputType="number"/>

    <EditText
        android:id="@+id/populatedPlaceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter populated place"/>

    <Button
        android:id="@+id/measureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measure Pulse"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/pulseLogTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"/>

</LinearLayout>
